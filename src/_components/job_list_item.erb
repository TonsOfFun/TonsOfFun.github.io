<li class="flex gap-4">
    <div class="relative flex items-center justify-center flex-none w-10 h-10 mt-1 rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
        <%= render IconLink.new(href: @job.website_url, alt: @job.company, classes: "font-semibold", hover: "hover:text-zinc-500 dark:hover:text-teal-400/10") do |icon_link| %>
            <% icon_link.icon do %>
                <img alt="" src="<%= @job.logo_url %>" width="32" height="32" decoding="async" data-nimg="future" class="rounded-full h-7 w-7" loading="lazy" style="color: transparent;">
            <% end %>

            <% icon_link.label do %>
                <span class="sr-only"><%= @job.company %></span>
            <% end %>
        <% end %>
    </div>
    <dl class="flex flex-wrap flex-auto gap-x-2">
        <dt class="sr-only">Company</dt>
        <dd class="flex-none w-full text-sm font-medium text-zinc-900 dark:text-zinc-100"><%= @job.company %></dd>
        <dt class="sr-only">Role</dt>
        <dd class="text-xs text-zinc-500 dark:text-zinc-400"><%= @job.roles.first.title %></dd>
        <dt class="sr-only">Date</dt>
        <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500" aria-label="2019 until Present">
            <time datetime="<%= @job.roles.last.start %>"><%= @job.roles.last.start %></time> 
            <span aria-hidden="true">â€”</span> 
            <time datetime="<%= @job.roles.first.end %>"><%= @job.roles.first.end %></time></dd>
    </dl>
</li>
