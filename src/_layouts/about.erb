---
layout: default
---
<div class="mt-16 sm:px-8 sm:mt-32">
    <div class="mx-auto max-w-7xl lg:px-8">
        <div class="relative px-4 sm:px-8 lg:px-12">
            <div class="max-w-2xl mx-auto lg:max-w-5xl">
                <div class="grid grid-cols-1 gap-y-16 lg:grid-cols-2 lg:grid-rows-[auto_1fr] lg:gap-y-12">
                    <div class="lg:pl-20">
                        <div class="max-w-xs px-2.5 lg:max-w-none"><img alt="Justin Bowen being tons of fun" sizes="(min-width: 1024px) 32rem, 20rem"
                                srcset=""
                                src="<%= cloudinary_url site.metadata.about_id, "medium" %>"
                                width="800" height="800" decoding="async" data-nimg="future"
                                class="object-cover aspect-square -rotate-2 rounded-2xl bg-zinc-100 dark:bg-zinc-800"
                                loading="lazy" style="color:transparent"></div>
                    </div>
                    <div class="prose lg:order-first lg:row-span-2 dark:prose-invert">
                        <h1 class="mt-6 text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
                            <%= resource.data.title %>
                        </h1>
                        <%= yield %>
                    </div>
                    <%= render "list_social_links", locals: { site: site } %>
                </div>
            </div>
        </div>
    </div>
</div>